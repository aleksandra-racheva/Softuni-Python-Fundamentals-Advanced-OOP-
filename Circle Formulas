class Circle:
    def __init__(self, radius: int):
        self.radius = radius

    pi = 3.14

    def set_radius(self, new_radius):
        self.radius = new_radius

    def get_area(self):
        return self.pi * self.radius**2

    def get_circumference(self):
        return (self.radius * 2) * self.pi
