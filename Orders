num_of_orders = int(input())
total = 0
for order in range(1, num_of_orders + 1):
    price_per_capsule = float(input())
    days = int(input())
    num_of_capsules = int(input())
    total_for_current_order = price_per_capsule * days * num_of_capsules
    total += total_for_current_order
    print(f"The price for the coffee is: ${total_for_current_order:.2f}")
    
print(f"Total: ${total:.2f}")
